@require './common'

.container
  display: inline-block
  position: relative
  height: 64px

  &.condensed
    height: 48px

  label
    position: absolute
    top: 12px
    left: 4px

    font-size: 12px
    pointer-events: none
    color: alpha($black, 0.256)
    transform-origin: top left
    transform: translateZ(0)
    transition: transform cubic-bezier(0.25, 0.8, 0.25, 1) 0.25s

  &.error
    label
      color: $warn !important

    .input-element
      border-bottom-color: $warn !important


  &.focused
    label
      color: $em-color-primary

  &.empty_unfocused
    label
      transform: translateY(20px) translateZ(0) scaleX(1.1) scaleY(1.1)
      font-size: 14px

.input-error
  position: absolute
  color: $warn
  font-size: 10px
  top: 48px

.input-element

  position: relative
  border-radius: 0

  font-size: 16px
  // line-height: 32px
  height 32px

  // padding-top 16px
  border: none

  top: 24px
  // padding-bottom: 1px
  padding-right: 4px
  padding-left: 4px

  padding-bottom 4px
  border-bottom: 1px solid rgba(0, 0, 0, 0.5)

  width: 100%
  transition: border-bottom-color linear 0.3s

  &[type="time"]
    -webkit-appearance: none
    min-width: 15px
    min-height: 48px

  &:focus
    padding-bottom: 3px
    border-bottom: 2px solid $em-color-primary

  font-size: 14px
  outline: 0
  -webkit-tap-highlight-color: rgba(0,0,0,0)
