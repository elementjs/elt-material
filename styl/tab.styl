@require 'common'

$em-tar-border-bottom-color = rgba(0, 0, 0, 0.14)

.em-tab-bar
	background-color: white
	border-bottom: 1px solid $em-tar-border-bottom-color
	height: 48px

.em-tab-title
	user-select(none)

	position: relative

	text-transform: uppercase
	text-align: center
	font-weight: bold
	color: $em-color-primary

	border-bottom: 1px solid $em-tar-border-bottom-color
	background: white

	height: 48px
	line-height: 48px
	// padding-bottom: 18px // 20 - 2

	font-size: 14px

	max-width: 264px
	min-width: 160px

	cursor: pointer

	transition border-bottom-color linear 0.2s

	&.active
		border-bottom: 2px solid $em-color-primary

.em-tab-content
	background-color: white