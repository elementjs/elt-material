@require 'common'

$font-size = 24px
$height = 64px

.em-toolbar
  box-sizing border-box
  display flex
  display -webkit-flex
  flex-direction row
  align-items center
  -webkit-flex-direction row
  -webkit-align-items center

  padding 0 8px
  height $height
  display box

  background-color $em-color-primary
  color white
  font-weight 500

  em-shadow-highlight()

.em-toolbar > h3
  font-size $font-size
  font-weight 500
  margin 0

.em-toolbar > h3:first-child
  padding-left 8px

.em-toolbar > h3:last-child
  padding-right 8px

.em-toolbar > button:first-child
  margin-left 0px

.em-toolbar > button:last-child
  margin-right 0px



.em-toolbar > .em-button
  margin 0 8px

  & > .em-button-content, & > .em-button-icon
    color white

    &.disabled
      color alpha(white, 0.25)

  & > .em-button-icon
    font-size $font-size


.em-toolbar > .em-input-container

  .em-input-element
    background-color: rgba(0, 0, 0, 0)
    color: rgba(255, 255, 255, 0.87)
    border-bottom-color: rgba(255, 255, 255, 0.54)

    &:focus
      padding-bottom: 0
      border-bottom: 2px solid rgba(255, 255, 255, 0.87)


  label
    color: rgba(255, 255, 255, 0.54)

  &.focused
    label
      color: rgba(255, 255, 255, 0.87)
