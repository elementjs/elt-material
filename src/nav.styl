
.holder.animation-enter

  & > .em-navigation-overlay
    animation: em-fade-in 0.2s ease-in
  & > .em-navigation-drawer
    animation: em-slide-from-right 0.2s ease-in


.holder.animation-leave

  & > .em-navigation-overlay
    animation: em-fade-out 0.2s ease-out
  & > .em-navigation-drawer
    animation: em-slide-to-right 0.2s ease-out


.overlay

  position: fixed
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  background-color: rgba(0, 0, 0, 0.24)
  transform: translateZ(0)


.drawer

  position: fixed
  font-size: 14px
  transform: translateZ(0)

  top: 0
  left: 0
  height: 100vh
  width: 250px
  box-shadow: 5px 0px 10px rgba(0, 0, 0, 0.14)

  background-color: white


.item
  position: relative

  display: flex
  align-items: center

  color: rgba(0, 0, 0, 0.87)

  height: 48px
  font-weight: bold

  &.selected
    background-color: rgba(0, 0, 0, 0.14)

.item-icon
  &:before
    font-size: 24px
  padding-left: 16px
  width: 72px
  color: rgba(0, 0, 0, 0.65)


.divider
  position: relative
  width: 100%
  border-bottom: 1px solid rgba(0, 0, 0, 0.07)
  margin-top: 4px
  margin-bottom: 3px

.body
  display: flex
  flex-direction: column
  flex-grow: 1

.header
  padding-top: 16px
  padding-left: 16px

.subheader
  padding-left: 16px

.footer
  text-align: center
  padding-bottom: 16px
