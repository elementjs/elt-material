@require 'common'


.button
  // This style applies to a button, that we want to completely reset.
  border: 0
  margin: 0
  background: none
  position: relative

  display inline-block
  padding 8px // this is to allow more space for touch events.

  outline 0
  -webkit-tap-highlight-color rgba(0,0,0,0)


.button-content, .button-icon

  // This is to prevent text selection inside the button.
  user-select(none)
  -webkit-tap-highlight-color: rgba(0,0,0,0)

  // necessary for correct inking.
  position: relative

  display inline-block

  // TEXT STYLE
  text-align: center
  vertical-align: middle
  cursor: pointer

  color: var(--em-color-primary)
  background: none

  &.disabled
    color: var(--em-color-disabled)
    box-shadow(none)


/**
  Classes that will apply on buttons with text content.
 */
.button-content

  &:hover
    background rgba(0, 0, 0, 0.07)

  // ...
  // On click
  &:active
    background rgba(0, 0, 0, 0.14)


  &.raised
    // FIXME will depend on theme
    color white
    // FIXME will be material colors
    background-color var(--em-color-primary)

    em-shadow-highlight()

    &.disabled
      color: $em-color-disabled
      background-color: var(--em-color-darken3)
      box-shadow(none)

  &.raised:hover
    background-color: lighten($em-color-primary, 10)

    &.disabled
      background-color: var(--em-color-darken2)

  &.raised:active
    background-color lighten($em-color-primary, 20)

  &.disabled
    &:hover
      background-color: var(--em-color-darken2)


// button icons need to be bigger.
.button-icon:before
  font-size 24px

.button-content

  min-width 64px

  text-transform uppercase
  font-weight 500
  font-family 'Roboto', 'Helvetica Neue', 'Segoe UI', 'Arial', sans-serif;

  // Should probably have a mixin for that
  // as it should be some global configuration option.
  border-radius 2px
  border-style none

  padding 0 6px

  line-height 36px
  height 36px


.fab
  // Rounded button.
  border-radius 50%

.button + .button
  // A button next to a button does not need so much space around it.
  margin-left 0 !important

.button-bar > .button
  padding-bottom: 0

.has-button-bar
  padding-bottom: 0
