*
  box-sizing: border-box

html, body
  color alpha(black, 87%)
  font-family 'Roboto', 'Segoe UI', 'Helvetica Neue', Arial, sans-serif
  font-size 14px

h1
  font-size 45px

h2
  font-size 34px
  font-weight 500
  margin-bottom 32px

h3
  font-size 24px
  font-weight 500
  margin-bottom 24px

h4
  font-size 18px
  font-weight 500
  margin-bottom 18px

h5
  font-size 16px
  font-weight 500
  margin-bottom 16px

h6
  font-size 14px
  font-weight 500
  margin-bottom 14px

h1, h2, h3, h4, h5, h6, p
  text-align: left

p, ul
  margin-bottom 16px

p.comment
  color rgba(0, 0, 0, 0.54)

b
  font-weight bold

em
  font-style italic
